<script type="text/javascript">
 // used for RIGHT MENU
$(document).ready(function(){
    $('.menuItem').click(function(e){

        // check if clicked was menu item like PRODUCT or ARTICLE
        var clicked = $(e.target);
        var z = clicked.parents('ul');
        if(z.get(0)){
            return true;
        }

        e.preventDefault();


        if(typeof menuItemActivatedCallback == 'function' && !$(this).find('.rlinksub').is(':visible')) {
            menuItemActivatedCallback($(this), $(this).attr('title'));
        }

        // CLOSE MENU
        $('.rlinksub').hide();
        $('.rlink').show();

        // OPEN specific menu
        $(this).find('.rlink').hide();
        $(this).find('.rlinksub').show();




        return false;
    });
});

</script>
<?php end_slot() ?>